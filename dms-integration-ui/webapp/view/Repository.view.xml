<mvc:View controllerName="com.ntt.dmsintegrationui.controller.Repository"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form">
    <Page id="Repository"
        showHeader="false">
        <content>
            <f:ShellBar title="{i18n>title}"
                secondTitle="{i18n>displayRepository}"
                homeIconPressed="onNavToHomepage"
                homeIcon="./img/app_logo.png">
                <f:profile>
                    <Avatar initials="NT"/>
                </f:profile>
            </f:ShellBar>
            <core:ComponentContainer usage="documentTable"
                height="100%"
                async="false"
                manifest="true"
                componentCreated="onComponentCreated"/>
        </content>
    </Page>
</mvc:View>
